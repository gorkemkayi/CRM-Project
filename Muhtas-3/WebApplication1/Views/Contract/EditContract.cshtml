@using WebApplication1.Models.Database
@model Contract
@{
    ViewBag.Title = "EditContract";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <form class="form-group col-md-6 shadow" method="post">
        @Html.Label("Customer", new { @class = "mt-3" })
        @Html.DropDownListFor(x => x.CustomerID, (List<SelectListItem>)ViewBag.Customer, "Select", new { @class = "form-control" })
        <br />
        @Html.Label("Subject")
        @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
        <br />
        @Html.Label("Contract Value")
        @Html.TextBoxFor(x => x.ContractValue, new { @class = "form-control", type = "number" })
        <br />
        @Html.Label("Contract Type")
        @Html.DropDownListFor(x => x.ContractTypeID, (List<SelectListItem>)ViewBag.ContractTypes, "Select", new { @class = "form-control" })

        <div class="row mt-3">
            <div class="col-md-6">
                @Html.Label("Start Date")
                @Html.TextBoxFor(x => x.StartDate, new { @class = "form-control", type = "date" })
            </div>
            <div class="col-md-6">
                @Html.Label("End Date")
                @Html.TextBoxFor(x => x.EndDate, new { @class = "form-control", type = "date" })
            </div>
        </div>
        <br />
        @Html.Label("Description")
        @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
        <br />
        <button class="btn btn-primary mb-3">Save</button>
    </form>

</div>
