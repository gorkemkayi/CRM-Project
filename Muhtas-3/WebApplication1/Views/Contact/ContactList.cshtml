@using WebApplication1.Models.Database
@model List<Contact>
@{
    ViewBag.Title = "ContactList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-striped">
    <tr class="table-success">
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Company</th>
        <th>Phone</th>
        <th>Position</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>
    @foreach (var item in Model) 
    {
        <tr>
            <td>@item.FirstName</td>
            <td>@item.LastName</td>
            <td>@item.Email</td>
            <td>@item.Customer.Company</td>
            <td>@item.Phone</td>
            <td>@item.Position</td>
            <td><a class="btn btn-warning" href="/Customer/EditCustomer/@item.ID">Edit</a></td>
            <td><a class="btn btn-danger" href="/Contact/DeleteContact/@item.ID">Delete</a></td>
        </tr>
    }
</table>

