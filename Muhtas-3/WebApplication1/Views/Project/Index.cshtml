@using WebApplication1.Models.Database
@model List<Project>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<a class="btn btn-primary" href="/Project/AddProject">New Project</a>
<a class="btn btn-info" href="/Project/ProjectPDF">Export</a>
<br /><br />
<h2>Project Summary </h2>
<div class="row">
    <div class="col-md">
        <span class="text-bold">@ViewBag.NotStarted</span> Not Started
    </div>
    <div class="col-md">
        <span class="text-bold">@ViewBag.InProgress</span> <span class="text-blue">In Progress</span>
    </div>
    <div class="col-md">
        <span class="text-bold">@ViewBag.OnHold</span> <span class="text-red">On Hold</span>
    </div>
    <div class="col-md">
        <span class="text-bold">@ViewBag.Cancelled</span> <span class="text-cyan">Cancelled</span>
    </div>
    <div class="col-md">
        <span class="text-bold">@ViewBag.Finished</span> <span class="text-red">Finished</span>
    </div>
</div>
<br />
<table id="tblProject" class="table table-striped shadow mt-3">
    <thead>
        <tr class=" bg-success">
            <th>#</th>
            <th>Project Name</th>
            <th>Customer</th>
            <th>Tags</th>
            <th>Start Date</th>
            <th>Deadline</th>
            <th>Members</th>
            <th>Status</th>
            <th>Edit Project</th>
            <th>Delete</th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.ProjectName</td>
            <td>@item.Customer.Company</td>
            <td>@item.Tag.Name</td>
            <td>@item.StartDate.ToString("dd/MM/yyyy")</td>
            <td>@item.Deadline.ToString("dd/MM/yyyy")</td>
            <td>@item.Member.Name</td>
            <td>@item.Status</td>
            <td><a class="btn btn-info" href="/Project/EditProject/@item.ID">Edit</a></td>
            <td><a class="btn btn-danger" href="/Project/DeleteProject/@item.ID">Delete</a></td>
        </tr>
    }
</table>

<link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/1.10.22/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.22/js/dataTables.bootstrap4.min.js"></script>

<script>

    $('#tblProject').dataTable({});

</script>